{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://incoherent.com/schemas/level.json",

    "properties": {
        "name": {
            "type": "array",
            "items": {
              "type": "object"
            },          
            "description": "The name of the level"
        },

        "game_type": {
            "type" : "object",
            "description": "Allowed game types",
            "properties": {
                "single_mode" : {
                    "type": "object",
                    "description": "For single plyaer mode",
                    "properties": {
                        "execution_time" : {
                            "type": "number",
                            "description": "Allowed execution time"
                        },
                        "entry_point_room" :  {
                            "type": "string",
                            "description": "Room where player is spawned"
                        },
                        "end_point_room" :  {
                            "type": "string",
                            "description": "Room where player has won"
                        }
                    }
                }
            }
        },

        "execution_time": {
            "type": "number",
            "description": "Duration time in seconds"
        },
        "section": {
            "type": "string",
            "description": "Section name to which it belongs"
        },
        "season": {
            "type": "number",
            "description": "The season that the episode was shown",
            "maximum": 99
        },
        "reboot": {
            "type": "boolean",
            "description": "true is this episode was made when the show returned in 1989 otherwise false "
        }
    },   
    "required": [
        "name",
        "game_type",
        "section",
        "rooms"
    ]
}

